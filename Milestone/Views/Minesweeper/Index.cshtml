﻿@using Milestone.Models
@model Milestone.Models.BoardModel

<style>
    .game-button {
        width: 65px;
        height: 65px;
    }

    .cell-img {
        width: 55px;
    }

    .cell {
        width: 65px;
        height: 65px;
    }

    .game-board {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .center {
        display: flex;
        align-items: center;
        justify-content: center;
        vertical-align: middle;
    }
</style>


@{
    string[] names = { "0.png", "1.png", "2.png", "3.png", "4.png", "5.png", "6.png", "7.png", "8.png", "9.png", "10.png", "11.png" };

    <h5 class="center"> Minesweeper </h5>
    <div class="center" style="font-family:Bungee">
        <p>Time: @DateTime.Now</p>
    </div>
    <div class="center" style="display:flex;margin-bottom: 6px">
        <!-- Save Button trigger modal -->
        <a class="nav-link save-game-button" style="margin-right:7.2em" asp-area="" asp-controller="Minesweeper" asp-action="SaveGame">
            <input type="submit" value="Save Game" class="btn btn-primary" data-bs-target="#savegameForm" />
        </a>
        <a class="nav-link" style="margin-left:7.2em" asp-area="" asp-controller="Minesweeper" asp-action="Index">
            <input type="submit" value="Restore Game" class="btn btn-primary" />
        </a>
    </div>


    <div class="modal fade" id="savegameForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="UserId" class="control-label"></label>
                        <input id="modal-input-userid" for="UserId" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="save-button" type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>










    <form asp-controller="Minesweeper" asp-action="ButtonClick">
        <audio id="gamemusic" src="~/Music/GameMusic.mp3" type="audio/mp3"></audio>
        <div class="game-board center">
            @for (int r = 0; r < Model.getSize(); r++)
            {

                @for (int c = 0; c < Model.getSize(); c++)
                {

                    if (@c % 10 == 0)
                    {
                        <div class="line-break"> </div>
                    }

                    <button class="cell game-button" type="submit" value=@r+@c name="rowcol">

                        <img class="cell-image" src="~/img/@names[Model.Grid[r,c].ButtonState]" id="center" />

                    </button>

                }
            }
        </div>
    </form>
}

<!-- Modal -->
<div class="modal fade" id="saveGameForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id" class="control-label"></label>
                    <input id="modal-input-id" for="Id" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Name" class="control-label"></label>
                    <input id="modal-input-name" for="Name" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Price" class="control-label"></label>
                    <input id="modal-input-price" for="Price" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Description" class="control-label"></label>
                    <input id="modal-input-description" for="Description" class="form-control" />

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="save-button" type="button" class="btn btn-primary btn-secondary" data-dismiss="modal">Save changes</button>
            </div>
        </div>
    </div>
</div>