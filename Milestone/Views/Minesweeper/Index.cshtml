@model IEnumerable<Milestone.Models.ButtonModel>


    <style>
        .game-button{
            width: 75px;
            height: 75px;
            border: solid 2px;
            border-color:#DCDCDC;
            margin:.25em;
        }

        .button-image {
            width: 65px;
            position: center;
    }
        .button-zone{
            display:flex;
            flex-wrap:wrap;
        }
        .line-break{
            flex-basis:100%;
            height:0;
        }
        .center{
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>

@{
    string[] names = { "0.png","1.png", "2.png","3.png","4.png","5.png","6.png","7.png","8.png","9.png","10.png","11.png" };

    <h5 class="center"> Minesweeper </h5>
    <form class="center">

        <div class="button-zone center">
        @for (int i = 0; i < Model.Count(); i++)
        {
            
            if (@i % 10 == 0)
            {
                <div class="line-break"> </div>
            }

                <div class="Button">
                    <button class="game-button" type="submit" value=@i name="buttonNumber" asp-controller="Minesweeper" asp-action="handleButtonClick">
                        <img class="button-image" src="~/img/@names[Model.ElementAt(i).ButtonState]"/>
                        @Model.ElementAt(i).Row
                        ,
                         @Model.ElementAt(i).Col
                        ,
                         @Model.ElementAt(i).ButtonState
                    </button>

                </div>
        }
            </div>
    </form>
}