@model Milestone.Models.UserModel
<div class="container" style="margin-top:3em;">

<div>
    <h4>Login Success!</h4>
    <hr />
    <dl class="row">
        <h5>Welcome, @Model.UserName please select a difficulty to begin!</h5> 
        
    </dl>

    <input type="checkbox" id="easy" name="easy" value="easy">
    <label for="easy">Easy</label><br>
    <input type="checkbox" id="medium" name="medium" value="medium">
    <label for="medium">Medium</label><br>
    <input type="checkbox" id="hard" name="hard" value="hard">
    <label for="hard">Hard</label><br>

    <div class="form-group" style="margin-top:3em;">
        <a class="nav-link" asp-area="" asp-controller="Minesweeper" asp-action="Index">
            <input type="submit" value="Play Game" class="btn btn-primary"/>
        </a>
    </div>
</div>
</div>
